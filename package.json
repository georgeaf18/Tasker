    "@angular/common": "~20.3.0",
    "@angular/compiler": "~20.3.0",
    "@angular/core": "~20.3.0",
    "@angular/forms": "~20.3.0",
    "@angular/platform-browser": "~20.3.0",
    "@angular/platform-browser-dynamic": "~20.3.0",
    "@angular/router": "~20.3.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.4.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~7.8.0",
    "zone.js": "~0.15.0"
  },
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:affected": "nx affected -t format",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "lint:affected": "nx affected -t lint",
    "type-check": "tsc --noEmit",
    "type-check:affected": "nx affected -t type-check",
    "test": "nx run-many -t test --exclude='*-e2e'",
    "test:affected": "nx affected -t test --exclude='*-e2e'",
    "test:coverage": "nx run-many -t test --coverage --exclude='*-e2e'",
    "test:watch": "nx run-many -t test --watch --exclude='*-e2e'",
    "e2e": "nx run-many -t e2e",
    "e2e:critical": "nx run-many -t e2e:critical",
    "e2e:affected": "nx affected -t e2e",
    "validate": "npm run format:check && npm run lint && npm run type-check && npm run test",
    "validate:affected": "npm run format:affected && npm run lint:affected && npm run type-check:affected && npm run test:affected",
    "deps:check": "depcruise --validate --config .dependency-cruiser.js frontend backend",
    "deps:graph": "depcruise --config .dependency-cruiser.js --output-type dot frontend backend | dot -T svg > dependency-graph.svg",
    "docs:generate": "typedoc",
    "docs:serve": "npx http-server docs/api -p 8080",
    "adr:index": "bash scripts/update-adr-index.sh",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version:patch": "npm version patch && npm run changelog",
    "version:minor": "npm version minor && npm run changelog",
    "version:major": "npm version major && npm run changelog",
    "dev:frontend": "nx serve frontend",
    "dev:backend": "nx serve backend",
    "dev:all": "nx run-many -t serve --parallel=2",
    "db:clean": "docker-compose down -v",
    "db:down": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres",
    "db:shell": "docker-compose exec postgres psql -U ${POSTGRES_USER:-tasker} -d ${POSTGRES_DB:-tasker_dev}",
    "db:up": "docker-compose up -d postgres",
    "db:validate": "./scripts/validate-db.sh",
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "build:production": "nx run-many -t build --configuration=production"
  }
}
