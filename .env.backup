# PostgreSQL Database Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# PostgreSQL user (default: tasker)
POSTGRES_USER=tasker

# PostgreSQL password (change this in production!)
POSTGRES_PASSWORD=your_secure_password_here

# PostgreSQL database name
POSTGRES_DB=tasker_dev

# PostgreSQL host (use 'localhost' for local dev, 'postgres' for Docker networking)
POSTGRES_HOST=localhost

# PostgreSQL port
POSTGRES_PORT=5432

# Full database connection URL for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://tasker:your_secure_password_here@localhost:5432/tasker_dev?schema=public"

# PostgreSQL External Access Control
# Set to 5432 to expose database port for development (enables GUI tools, host backend connection)
# Set to empty value or remove for AI auto-approve mode (no external database access)
# When disabled, backend on host can still use Docker network if needed
POSTGRES_EXTERNAL_PORT=
